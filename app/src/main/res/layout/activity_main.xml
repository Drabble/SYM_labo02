<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heig.sym.sym_labo02.activities.MainActivity">

    <Button
        android:text="Activity2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/activity2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/activity3"
        android:onClick="startActivity2" />

    <Button
        android:text="Activity4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/activity4"
        android:layout_below="@+id/activity1"
        android:layout_toEndOf="@+id/activity3"
        android:onClick="startActivity4" />

    <Button
        android:text="Actvity3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/activity3"
        android:layout_below="@+id/activity1"
        android:layout_alignParentStart="true"
        android:onClick="startActivity3" />

    <Button
        android:text="Activity1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/activity1"
        android:onClick="startActivity1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
